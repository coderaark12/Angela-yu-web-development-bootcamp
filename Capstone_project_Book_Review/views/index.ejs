<%- include('partials/header.ejs'); -%>

<div class="container">
  <% if (locals.bookData) { %>
    <% for (let book of bookData) { %>
      <div class="container bg-body-tertiary col w-75 mb-4 p-4">
        <h1 class="row text-dark mb-4"> <%= book.title %></h1>
        
        <img src="/Images/<%= book.id %>.jpeg" class="img-fluid float-start me-5 mb-3" style="max-width: 150px;" alt="<%= book.title %>" />
        <p> <%= book.content %> </p>
        <div class="d-flex text-dark align-items-center">
          <span>Author:</span>
          <span class="fw-bold ms-1"><%= book.author %></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-2">
          <div class="d-flex align-items-center">
            <span>Rating:</span>
            <span class="ms-1">(<%= book.rating %>)</span>
            <div class="d-flex rating-container ms-2">
              <% for (let i = 1; i <= book.rating; i++) { %>
                <i class="bi bi-star-fill text-warning">â˜…</i>
              <% } %>
            </div>
          </div>
          <div class="d-flex">
            <a class="navbar-brand fs-5 me-5 text-primary" href="/edit/<%= book.id %>">&#9998; Edit</a>
            <a class="navbar-brand fs-5 me-2 text-danger" href="/delete/<%= book.id %>">Delete</a>
          </div>
        </div>
      </div>
    <% } %>
  <% } %>
</div>

<%- include('partials/footer.ejs'); -%>
